{% extends "@MaPage/base.html.twig" %}

{% block title %}
    <title>Formulaire</title>
{% endblock %}

{% block body %}
    {{ form_start(form) }}
    <h1 class="title-form">Ajouter votre manga</h1>

    <article class="container_form">
        <div class="div_form">
        {{ form_label(form.title, null, { 'label' : 'Nom du manga: ',
            'label_attr':
            {
                'class': 'label_label'
            }
        })
        }}

        {{ form_widget(form.title, {
            'attr':
            {
                'class': 'widget_widget',
                'placeholder': 'Soul Eater'
            }
        })
        }}
        </div>


        <div class="div_form">
        {{ form_label(form.img, null, { 'label' : 'Image réprésentant le manga:','label_attr': {'class': 'label_label'} }) }}

        {{ form_widget(form.img, {
            'attr':
            {
                'class': 'widget_widget'
            }
        })
        }}
        </div>


        {{ form_label(form.synopsis, null, { 'label' : 'Description du manga:','label_attr': {'class': 'label_label'} }) }}

        {{ form_widget(form.synopsis, {
            'attr':
            {
                'class': 'widget_synopsis',
                'placeholder': 'Plusieurs jeunes élèves de l\'école Shibusen apprennent à devenir des Meisters. Cette école a été fondée par maître Shinigami ...'
            }
        })
        }}


        <div class="div_form">

        {{ form_label(form.auteur, null, { 'label' : 'Votre pseudo:','label_attr': {'class': 'label_label'} }) }}

        {{ form_widget(form.auteur, {
            'attr':
            {
                'class': 'widget_widget',
                'placeholder': 'Cmoi'
            }
        })
        }}

        </div>

        <div class="div_form_submit">
        {{ form_label(form.submit, null, { 'label' : 'Envoyer','label_attr': {'class': 'label_submit'} }) }}

        {{ form_widget(form.submit, {
            'attr':
            {
                'class': 'widget_submit'
            }
        })
        }}
        </div>

    </article>
    {{ form_end(form) }}

{% endblock %}

{% block JS %}
{% endblock %}